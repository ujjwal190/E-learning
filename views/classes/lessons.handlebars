<h2>{{class.title}}'s Courses</h2>
<table cellspacing="0" cellpadding="0">
	<thead>
		<tr>
			<th>Course Number</th>
			<th>Course Title</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		{{#each class.lessons}}
			<tr>
				<td>{{lesson_number}}</td>
				<td>{{lesson_title}}</td>
				<td><a href="/classes/{{../class._id}}/lessons/{{lesson_number}}" class="button">View Lesson</a></td>
			</tr>
		{{/each}}
	</tbody>
</table>
<hr/>

<video controls>
            <source src="/images/{{lesson.video}}" type="video/mp4"/>
            
            <!-- fallback -->
            Your browser does not support the <code>video</code> element.
 </video>
 

	